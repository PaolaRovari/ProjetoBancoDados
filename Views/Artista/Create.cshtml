@model ProjetoBancoDados.Models.Artista

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Artista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeArtista" class="control-label"></label>
                <input asp-for="NomeArtista" class="form-control" />
                <span asp-validation-for="NomeArtista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NacionalidadeArtista" class="control-label"></label>
                <input asp-for="NacionalidadeArtista" class="form-control" />
                <span asp-validation-for="NacionalidadeArtista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimentoFalecimento" class="control-label"></label>
                <input asp-for="DataNascimentoFalecimento" class="form-control" />
                <span asp-validation-for="DataNascimentoFalecimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
