@model ProjetoBancoDados.Models.LugarVisita

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lugar da Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Visita" class="control-label"></label>
                <select asp-for="VisitaId" class ="form-control" asp-items="ViewBag.VisitaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <select asp-for="LugarId" class ="form-control" asp-items="ViewBag.LugarId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
